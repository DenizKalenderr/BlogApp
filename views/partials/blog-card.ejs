<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img src="/static/images/img/<%=image %>" class="img-fluid" alt="">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h6 class="card-title">
                    <a style="text-decoration: none;" href="/blogs/<%= id  %>"><%= title %></a>
                </h6>
                <p class="card-text">
                    <%= description %>
                </p>
            </div>
        </div>
    </div>
</div>