<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body>

    <%- include('../partials/nav') %>

        <div class="container mt-3">
            <div class="row">
                <div class="col-md-12 mt-3">
                    <form action="" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="blogid" value="<%= blog.blogid%>">
                        <input type="hidden" name="image" value="<%= blog.image%>">
                        <div class="row mb-3">
                            <label for="title" class="col-sm-2 col-form-label">Başlık</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="title" name="title" value="<%= blog.title %>">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="description" class="col-sm-2 col-form-label">Açıklama</label>
                            <div class="col-sm-8">
                                <textarea name="description" class="form-control" rows="10"><%= blog.description %></textarea>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="image" class="col-sm-2 col-form-label">Resim</label>
                            <div class="col-sm-8">
                                <img src="/static/images/img/<%= blog.image%>" alt="" width="120px">
                                <input type="file" class="form-control" id="image" name="image">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="category" class="col-sm-2 col-form-label">Kategori</label>
                            <div class="col-sm-8">
                                <select name="category" id="category" class="form-select">
                                    <option value="-1" selected>Seçiniz</option>
                                    <% categories.forEach(category => { %>
                                        <% if (category.categoryid == blog.categoryid) { %>
                                            <option value="<%=  category.categoryid %> " selected><%= category.name %></option>
                                            <% } else { %>
                                                <option value="<%=  category.categoryid %> " ><%= category.name %></option>
                                         
                                        <% } %>
                                      
                                    <% }) %>

                                </select>
                            </div>
                        </div>
                        <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="homepage" name="homepage" <%= blog.homepage?"checked":"" %>>
                            <label class="form-check-label" for="homepage">
                                Anasayfa
                            </label>
                            </div>
                          </div>
                        </div>
                        <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="confirmation" name="confirmation" <%= blog.confirmation?"checked":"" %> />
                            <label class="form-check-label" for="confirmation">
                                Onay
                            </label>
                            </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-10 offset-sm-2">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
</body>

</html>